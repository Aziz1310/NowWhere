<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maher.nowhere.ForgetPassword.CompteRenitialiserActivity"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_pass"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_pass" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_pass"
                android:id="@+id/rv1"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compte rénitialiser"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:id="@+id/textView1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/rv2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votre nouveau mot de passe a bien été\npris en compte"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/rv3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_reset_password"/>

            </RelativeLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnRetour"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/background_button"
                android:text="Retour"
                android:textColor="@color/white"
                android:layout_below="@+id/rv3"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
