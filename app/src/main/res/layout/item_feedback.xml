<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/prof_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_img1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nomProf"
            android:text="Saif Zoghlami"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/prof_img"
            android:layout_toEndOf="@+id/prof_img"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/prof_img"
            android:layout_toRightOf="@+id/prof_img"
            android:layout_below="@+id/tv_nomProf"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:id="@+id/avis_l">

            <RatingBar
                android:layout_gravity="center"
                android:id="@+id/rb_resto"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleY="1"
                android:scaleX="1"
                style="@style/RatingBar"
                android:numStars="5"
                android:isIndicator="true"
               />


            <TextView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18h"
                android:layout_marginLeft="20dp"
                android:id="@+id/time_avis"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_avis"
            android:text="Nice one!"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorGreyText"
            android:textStyle="normal"
            android:layout_below="@+id/avis_l"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toRightOf="@+id/prof_img"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="17dp"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/divider_list" />

</LinearLayout>