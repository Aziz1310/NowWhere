<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maher.nowhere.ProfileActivity.FriendsActivity"
    android:background="@color/colorPrimaryDark"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayoutP"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:background="@drawable/signup_image">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="85dp"
                android:id="@+id/relativeLayout2">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageProfile"
                    android:src="@drawable/profile_image"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageAdd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/icon_signup_name"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:id="@+id/imageChat"
                    android:src="@drawable/icon_chat"/>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/profileForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/relativeLayoutP"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nomProfile"
                        android:layout_centerInParent="true"
                        android:text="Zeinab Azzabi"
                        android:textColor="@color/colorAccentBright"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:rotation="90"
                        android:text="Friends"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:src="@drawable/signup_image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/circleImageView"
                        android:layout_toRightOf="@+id/circleImageView"
                        android:src="@drawable/signup_image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/circleImageView2"
                        android:layout_toRightOf="@+id/circleImageView2"
                        android:src="@drawable/signup_image"
                        android:id="@+id/circleImageView6" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/backgrounf_oval"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/circleImageView6"
                        android:layout_toEndOf="@+id/circleImageView6" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="+179"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/circleImageView6"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Following"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:rotation="90"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:id="@+id/textView2" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/signup_image"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_toEndOf="@+id/textView2"
                        android:id="@+id/circleImageView3" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/signup_image"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/circleImageView3"
                        android:layout_toEndOf="@+id/circleImageView3"
                        android:id="@+id/circleImageView4" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/signup_image"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/circleImageView4"
                        android:layout_toEndOf="@+id/circleImageView4"
                        android:id="@+id/circleImageView5" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/circleImageView5"
                        android:layout_toEndOf="@+id/circleImageView5"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/backgrounf_oval"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:layout_alignStart="@+id/imageView2"
                        android:text="+79" />


                </RelativeLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btn_follow"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_button"
                    android:text="Follow"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </RelativeLayout>


</RelativeLayout>
