<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTransparent"
    tools:context="com.maher.nowhere.MapActivity.DetailMapActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorGrey"
        android:id="@+id/relativeLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carpe Diem"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_string"
            android:textColor="@color/colorGreyText"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/textView4"
            android:gravity="center"
            android:maxLines="3"
            android:freezesText="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imageCrape"
            android:src="@drawable/icon_crape"/>

    </RelativeLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_event"
        android:background="@drawable/background_button_event"
        android:text="Voir Ã©venement   +"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="-25dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
