<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maher.nowhere.ForgetPassword.MotDePasseOublieActivity"
    android:background="@color/colorPrimaryDark"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_pass"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_pass" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_pass"
                android:id="@+id/rv1"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vous avez oublié\nvotre mot de passe ?"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:id="@+id/textView1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/rv2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merci de saisir l'adresse courriel ou le numéro\nde téléphone mobile associé à votre compte\nchez NOWWHERE puis cliquer sur Continuer."
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/rv3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nous vous enverrons un email et un SMS\npour vous permettre de créer simplement un\nnouveau mot de passe."
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/rv4">

            <EditText
                android:id="@+id/etForgetPAss"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="E-mail, N°téléphone"
                android:gravity="center"
                android:background="@drawable/dashed_line"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorGreyText" />

        </RelativeLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/background_button"
                android:text="Rénitialiser"
                android:textColor="@color/white"
                android:layout_below="@+id/rv4"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
